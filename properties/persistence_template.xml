<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
  <persistence-unit name="jbpcc">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    <class>org.jbpcc.domain.model.UserVO</class>
    <properties>
      <property name="jbpcc.ConnectionURL" value="%jbpcc.db.url%"/>
      <property name="jbpcc.ConnectionDriverName" value="%jbpcc.db.driver%"/>
      <property name="jbpcc.Log" value="DefaultLevel=WARN, Tool=INFO"/>
    </properties>
  </persistence-unit>
</persistence>